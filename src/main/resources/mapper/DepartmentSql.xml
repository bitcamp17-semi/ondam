<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="data.mapper.DepartmentMapper">
    <insert id="createDep" parameterType="map">
        insert into department (userId, name)
        values (#{userId}, #{name})
    </insert>
    <select id="readAllDeps" resultType="DepartmentDto">
        select *
        from department
    </select>
    <select id="readDepById" parameterType="int" resultType="DepartmentDto">
        select *
        from department
        where id = #{id}
    </select>
    <update id="updateDep" parameterType="DepartmentDto">
        update department
        <set>
            <if test="name != null">name = #{name},</if>
            <if test="userId != null">userId = #{userId},</if>
            updatedAt = now()
        </set>
        where id = #{id}
    </update>
    <delete id="deleteDep" parameterType="int">
        delete
        from department
        where id = #{id}
    </delete>
</mapper>