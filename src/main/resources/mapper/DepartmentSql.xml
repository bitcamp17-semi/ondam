<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="data.mapper.DepartmentMapper">
    <insert id="createDep" parameterType="map">
        insert into department (userId, name)
        values (#{userId}, #{name})
    </insert>
    <select id="readAllDeps" resultType="DepartmentDto">
        select * from department
    </select>
</mapper>