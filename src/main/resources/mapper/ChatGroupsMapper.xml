<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="data.mapper.ChatGroupsMapper">
    <!-- ID로 채팅 그룹 조회 -->
    <select id="readById" resultType="ChatGroupsDto">
        select * from chat_groups where id = #{id}
    </select>    
    <!-- 사용자 ID로 참여 중인 채팅 그룹 조회 (junction 테이블 조인) -->
    <select id="readByUserId" resultType="ChatGroupsDto">
        select chat_groups.* from chat_groups
        join junction_chat_users_groups on chat_groups.id = junction_chat_users_groups.groupid
        where junction_chat_users_groups.userid = #{userId}
    </select>    
    <!-- 채팅 그룹 저장 -->
    <insert id="createGroupChat" parameterType="ChatGroupsDto" useGeneratedKeys="true" keyProperty="id">
        insert into chat_groups (name) values (#{name})
    </insert>    
    <!-- 사용자를 그룹에 추가 (junction 테이블 삽입) -->
    <insert id="createUserToGroup">
        insert into junction_chat_users_groups (userId, groupId)
        values (#{userId}, #{groupId})
    </insert>
</mapper>